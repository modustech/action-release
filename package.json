{
  "name": "release-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript release action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/action-release.git"
  },
  "author": "Bill",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "got": "^12.5.3",
    "js-yaml": "^3.13.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^3.12.6",
    "@types/node": "^14.17.3",
    "@typescript-eslint/parser": "^4.26.1",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.28.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "prettier": "^1.19.1",
    "ts-jest": "^27.0.3",
    "typescript": "^3.9.9"
  }
}
